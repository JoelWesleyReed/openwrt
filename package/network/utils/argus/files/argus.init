#!/bin/sh /etc/rc.common

USE_PROCD=1
START=99
STOP=1
PROG=/usr/sbin/argus

start_service() {
	procd_open_instance
	procd_set_param command "$PROG" -F /etc/config/argus.conf
	procd_set_param file /etc/config/argus.conf
	procd_set_param stdout 1
	procd_set_param stderr 1
	procd_set_param respawn
	procd_close_instance
}
